<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/wifi_list_ripple">
    <TextView
        android:id="@+id/wifi_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Private"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingStart="15dp"/>

    <ImageView
        android:id="@+id/wifi_security"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@id/wifi_signel"
        android:layout_alignLeft="@id/wifi_signel"
        android:src="@drawable/ic_baseline_lock_24" />

    <ImageView
        android:id="@+id/wifi_signel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_wifi_high_signel" />
</RelativeLayout>